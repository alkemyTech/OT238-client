<resources>
    <!-- Base application theme. -->
    <style name="Theme.ONGAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text appearance label large -->
        <item name="textAppearanceLabelLarge">@style/TextAppearance.MaterialComponents.Body1</item>

    </style>
    <style name="Button.Icon" parent="Widget.Material3.Button.Icon">
        <item name="android:backgroundTint">@color/color_states_night_materialbutton</item>
        <item name="android:textColor">@color/secondaryButtonTextColor</item>
        <item name="rippleColor">@color/strokeNightColor</item>
        <item name="strokeColor">@color/strokeNightColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@null</item>
    </style>

</resources>